            <a href="">
                <div id="linkedin">
                    <img src="{{asset ('bundles/digal/images/social/linkedin.png')}}" alt="linkedin"><br>
                    Linkedin <br>
                    <span>Seguinos ></span>
                </div>
            </a>
        </div>
        <!-- footer -->
